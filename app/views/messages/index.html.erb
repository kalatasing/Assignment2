<p id="notice"><%= notice %></p>

<h1><%= params[:type] %></h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Sender</th>
      <th>Recipient</th>
      <th>Read status</th>
      <th>Read at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>

      <% if message.read_status != true%>
          <tr style="font-weight:bold">
            <td><%= message.title %></td>
            <td><%= message.body %></td>
            <td><%= message.sender.email %></td>
            <td><%= message.recipient.email %></td>
            <td><%= message.read_status %></td>
            <td><%= message.read_at %></td>
            <td><%= link_to 'Show', message %></td>
            <td><%# link_to 'Show', :controller => "message", :action => "update_read_message", :id => message.id  %></td>
            <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% else %>
          <tr>
            <td><%= message.title %></td>
            <td><%= message.body %></td>
            <td><%= message.sender.email %></td>
            <td><%= message.recipient.email %></td>
            <td><%= message.read_status %></td>
            <td><%= message.read_at %></td>
            <td><%= link_to 'Show', message %></td>
            <td><%# link_to 'Show', :controller => "message", :action => "update_read_message", :id => message.id  %></td>
            <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>

    <% end %>
  </tbody>
</table>

<br>

